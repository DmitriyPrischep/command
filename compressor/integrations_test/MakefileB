# Point to your Boost top level directory
BOOST_ROOT = C:/boost/include/boost-1_68

CXX := A:/DATA/CODE/mingw/mingw64/bin/g++

CXXFLAGS := -std=c++11 -I$(BOOST_ROOT)
LDFLAGS := -L$(BOOST_ROOT)/stage/lib -lboost_filesystem

SOURCES = Test_Compress_And_Decompress.cpp ../Selector.cpp ../LZW.cpp RW_Liner.cpp RW_Interface.cpp FileInfo.cpp
